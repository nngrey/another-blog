<% time = comment.date %>
<strong><%= comment.name %></strong> said at <%= time.strftime("%l:%M%p on %B,%e %Y") %>

<% if can? :create, @comment %>
  <%= link_to "update", edit_post_comment_path(comment.post, comment), :class => "btn-xs btn-warning" %>
<% end %>

<% if can? :delete, @comment %>
  <%= link_to "delete", post_comment_path(comment.post, comment), :class => "btn-xs btn-danger", method: :delete %>
<% end %>

<p><%= comment.body %></p>

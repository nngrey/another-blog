<%= form_for [@post, @comment], :html => { :id => 'comment_form' }, remote: true do |f| %>
<%= f.hidden_field :user_id, :value => current_user.id %>
<%= f.hidden_field :post_id, :value => @post.id %>
<%= f.label :name %><br>
<%= f.text_field :name, :value => current_user.name,:readonly => true %><br>
<%= f.hidden_field :date, :value => Time.now %><br>
<%= f.label :comment %><br>
<%= f.text_area :body, :cols => "60", :rows => "4" %><br>
<%= f.submit(:class => "btn btn-primary") %>
<% end %>


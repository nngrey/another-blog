<%= form_for [@post, @comment], remote: true do |f| %>
<%= f.hidden_field :user_id, :value => current_user.id %>
<%= f.hidden_field :post_id, :value => @post.id %>
<%= f.label :name %><br>
<%= f.text_field :name, :value => current_user.name %><br>
<%= f.label :date %><br>
<%= f.datetime_field :date, :value => Date.today %><br>
<%= f.label :body %><br>
<%= f.text_area :body %><br>
<%= f.submit(:class => "btn btn-primary") %>
<% end %>

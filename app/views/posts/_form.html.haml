= render 'layouts/errors', :object => @post 

= form_for @post, :html => { :multipart => true } do |f| 
  = f.label :title, "Title"
  = f.text_field :title
  %br/
  = f.label :date, "Date"
  = f.datetime_field :date, :value => Date.today
  %br/
  = f.label :body, "Body"
  = f.text_area :body, :cols => "100", :rows => "20"
  %br/
  = f.label :image, 'Image'
  = f.file_field :image
  = f.label :publish, 'Post status'
  %br/
  = f.radio_button :publish, false
  = label :publish, 'Edit'
  = f.radio_button :publish, true
  = label :publish, 'Published'
  %br/
  = f.submit(:class => 'btn btn-primary')


<h4><%= @post.title %></h4>
<%= @post.date %>
<p><%= @post.body %></p>
<%= link_to "edit", edit_post_path(@post), :class => "btn btn-primary" %>
<%= link_to "delete", post_path(@post), data: { confirm: 'Are you sure?'},
                                        method: 'delete',
                                        :class => "btn btn-danger" %>

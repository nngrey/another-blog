<%= form_for @post do |f| %>
  <%= f.label :title, "Title" %>
  <%= f.text_field :title %><br>
  <%= f.label :date, "Date" %>
  <%= f.datetime_field :date, :value => Date.today %><br>
  <%= f.label :body, "Body" %>
  <%= f.text_area :body %><br>
  <%= f.submit(:class => 'btn btn-primary') %>
<% end %>
